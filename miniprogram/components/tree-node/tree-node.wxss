.tree-node {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Microsoft YaHei', sans-serif;
  margin-bottom: 20rpx;
}

.tree-node.is-root {
  margin-bottom: 30rpx;
}

.node-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  margin: 4rpx 0;
  background: transparent;
  transition: background-color 0.2s;
}

.node-header.has-children {
  font-weight: 600;
}

.node-header.clickable:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.tree-node.is-root > .node-header {
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);
  padding: 32rpx 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  border-radius: 16rpx;
}

.toggle-icon {
  margin-right: 16rpx;
  color: #2563eb;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  width: 24rpx;
}

.leaf-icon {
  margin-right: 16rpx;
  color: #10b981;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  width: 28rpx;
}

.node-title {
  flex: 1;
  font-weight: 600;
  color: #1f2937;
  font-size: 30rpx;
}

.tree-node.is-root > .node-header .node-title {
  font-size: 36rpx;
  font-weight: 700;
}

.node-count {
  font-size: 26rpx;
  color: #6b7280;
  margin-left: 16rpx;
  background: rgba(107, 114, 128, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.node-children {
  padding: 0 0 16rpx 48rpx;
  background: #fafbfc;
}

.tree-node.is-root > .node-children {
  background: rgba(255, 255, 255, 0.5);
  padding: 32rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.node-items {
  padding: 24rpx 32rpx 24rpx 96rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #e5e7eb;
}

.tree-node.is-root > .node-items {
  background: rgba(248, 249, 250, 0.8);
  border-top: 1rpx solid rgba(229, 231, 235, 0.5);
  border-radius: 0 0 16rpx 16rpx;
  margin-top: 16rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  margin: 8rpx 0;
  color: #1f2937;
  font-size: 28rpx;
  line-height: 1.5;
  border-radius: 12rpx;
  background: transparent;
  transition: all 0.2s ease;
}

.item:active {
  background-color: rgba(37, 99, 235, 0.08);
  transform: translateX(4rpx);
}

.item-icon {
  flex-shrink: 0;
  margin-right: 20rpx;
  font-size: 28rpx;
  opacity: 0.7;
}

.item-title {
  flex: 1;
  font-weight: 500;
  word-break: break-word;
}
