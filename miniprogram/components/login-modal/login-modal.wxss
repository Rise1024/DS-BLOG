.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  animation: fadeIn 0.3s ease;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  animation: slideIn 0.3s ease;
}

.modal-header {
  padding: 48rpx 0;
  text-align: center;
  background: #f8f9fa;
}

.modal-logo {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.modal-body {
  padding: 32rpx;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
}

.modal-footer {
  padding: 32rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #3f72af !important;
  color: white !important;
  font-size: 32rpx;
  font-weight: normal !important;
  border-radius: 44rpx !important;
  margin-bottom: 24rpx;
  transition: opacity 0.3s;
}

.login-btn:active {
  opacity: 0.9;
}

.cancel-btn {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 16rpx;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -40%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}