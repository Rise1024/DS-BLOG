.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-trend {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  display: inline-block;
}

.stat-trend.up {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.stat-trend.down {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

.chart-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.time-selector {
  display: flex;
  gap: 16rpx;
}

.time-option {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  background: #f0f0f0;
}

.time-option.active {
  color: white;
  background: #1a237e;
}

.chart-container {
  height: 400rpx;
  width: 100%;
}

.trend-chart {
  width: 100%;
  height: 100%;
}

.usage-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.usage-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.usage-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.usage-date {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
}

.usage-bar-container {
  flex: 1;
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  position: relative;
}

.usage-bar {
  height: 100%;
  background: #1a237e;
  border-radius: 16rpx;
  transition: width 0.3s ease;
}

.usage-count {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: white;
}