<view class="blog-container">
  <!-- æœç´¢æ  -->
  <view class="search-bar">
    <view class="search-input-wrapper">
      <input 
        class="search-input" 
        placeholder="æœç´¢æ–‡ç« ..." 
        value="{{searchKeyword}}"
        bindinput="onSearchInput"
        bindconfirm="onSearch"
        confirm-type="search"
      />
      <view class="search-icon" bindtap="onSearch">
        <text class="iconfont icon-search">ğŸ”</text>
      </view>
    </view>
  </view>

  <!-- åŠ è½½çŠ¶æ€ -->
  <view wx:if="{{isLoading}}" class="loading-container">
    <view class="loading-spinner"></view>
    <text class="loading-text">åŠ è½½ä¸­...</text>
  </view>

  <!-- é”™è¯¯çŠ¶æ€ -->
  <view wx:elif="{{error}}" class="error-container">
    <text class="error-icon">âš ï¸</text>
    <text class="error-text">{{error}}</text>
    <button class="retry-btn" bindtap="loadBlogData">é‡è¯•</button>
  </view>

  <!-- åšå®¢å†…å®¹ -->
  <view wx:else class="blog-content">
    <!-- åˆ†ç±»åˆ—è¡¨ -->
    <scroll-view class="category-list" scroll-y="true">
      <view 
        wx:for="{{categories}}" 
        wx:key="name"
        class="category-item {{selectedCategory === item.name ? 'active' : ''}}"
        bindtap="selectCategory"
        data-category="{{item.name}}"
      >
        <text class="category-name">{{item.name}}</text>
        <text class="category-count">({{item.count}})</text>
      </view>
    </scroll-view>

    <!-- æ–‡ç« åˆ—è¡¨ -->
    <scroll-view class="article-list" scroll-y="true">
      <view 
        wx:for="{{articles}}" 
        wx:key="id"
        class="article-item"
        bindtap="goToArticle"
        data-article="{{item}}"
      >
        <view class="article-header">
          <text class="article-title">{{item.title}}</text>
          <text class="article-date">{{item.createdAt}}</text>
        </view>
        
        <text class="article-description">{{item.description}}</text>
        
        <view class="article-tags">
          <text 
            wx:for="{{item.tags}}" 
            wx:key="*this"
            class="article-tag"
          >
            {{item}}
          </text>
        </view>
        
        <view class="article-meta">
          <text class="article-category">{{item.category}}</text>
        </view>
      </view>

      <!-- ç©ºçŠ¶æ€ -->
      <view wx:if="{{articles.length === 0}}" class="empty-state">
        <text class="empty-icon">ğŸ“</text>
        <text class="empty-text">æš‚æ— æ–‡ç« </text>
      </view>
    </scroll-view>
  </view>
</view>
