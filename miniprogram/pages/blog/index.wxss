/* 博客容器 */
.blog-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fa;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e9ecef;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 25rpx;
  padding: 0 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #3f72af;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.retry-btn {
  background-color: #3f72af;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 博客内容 */
.blog-content {
  flex: 1;
  display: flex;
  height: calc(100vh - 120rpx);
}

/* 分类列表 */
.category-list {
  width: 200rpx;
  background-color: #fff;
  border-right: 1rpx solid #e9ecef;
}

.category-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.category-item.active {
  background-color: #3f72af;
  color: #fff;
}

.category-name {
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 文章列表 */
.article-list {
  flex: 1;
  padding: 20rpx;
}

.article-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.article-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.article-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.article-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-right: 20rpx;
}

.article-date {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

.article-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.article-tag {
  background-color: #e9ecef;
  color: #666;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.article-category {
  font-size: 24rpx;
  color: #3f72af;
  background-color: #f0f4ff;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}
