.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.about-card {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  animation: slideUp 0.4s ease;
}

.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.app-version {
  font-size: 28rpx;
  color: #666;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.section-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-text,
.team-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.contact-section {
  text-align: center;
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.contact-text {
  font-size: 26rpx;
  color: #999;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}