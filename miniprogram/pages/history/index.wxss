.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-group {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  cursor: pointer;
}

.group-date {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.group-arrow {
  transition: transform 0.3s ease;
}

.group-arrow.expanded {
  transform: rotate(90deg);
}

.arrow-icon {
  color: #666;
  font-size: 24rpx;
}

.group-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
  background: #fff;
}

.group-content.expanded {
  max-height: 800rpx;
}

.image-scroll {
  padding: 24rpx;
  white-space: nowrap;
}

.image-list {
  display: inline-flex;
  gap: 16rpx;
}

.image-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: center;
}

.history-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.image-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  margin: 0 !important;
  padding: 0 24rpx !important;
  font-size: 24rpx !important;
  line-height: 56rpx !important;
  border-radius: 28rpx !important;
  transition: opacity 0.2s ease;
}

.btn-hover {
  opacity: 0.8;
}

.download-btn {
  background: #3f72af !important;
  color: white !important;
}

.delete-btn {
  background: #f8f9fa !important;
  color: #666 !important;
  margin: 0 24rpx 24rpx !important;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 96rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 96rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 24rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}