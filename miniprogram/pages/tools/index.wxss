.container {
  padding: 20px;
}

.picker {
  padding: 12px 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #f8f8f8;
  color: #333;
  position: relative;
}

.picker::after {
  content: "▼";
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  color: #666;
  font-size: 12px;
}

.picker:active {
  background-color: #eee;
  border-color: #ccc;
}

.share-btn {
  z-index: 9999; /* 确保按钮在最上层 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15); /* 添加阴影增强可见性 */
}

/* 大纲按钮样式 */
.outline-btn {
  position: fixed;
  bottom: 180rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #3f72af, #5a8fd8);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(63, 114, 175, 0.3);
  z-index: 100;
  transition: all 0.3s ease;
}

.outline-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(63, 114, 175, 0.4);
}

.outline-icon {
  font-size: 32rpx;
  color: white;
  margin-bottom: 8rpx;
}

.outline-text {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

/* 大纲抽屉遮罩层 */
.outline-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 大纲抽屉主体 */
.outline-drawer {
  width: 100%;
  max-height: 70vh;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 抽屉头部 */
.outline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  background: white;
  z-index: 1001;
}

.outline-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.outline-close {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
  line-height: 1;
}

/* 大纲内容区域 */
.outline-content {
  flex: 1;
  padding: 0 40rpx 40rpx;
  max-height: calc(70vh - 100rpx);
}

/* 大纲项样式 */
.outline-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
}

.outline-item:last-child {
  border-bottom: none;
}

.outline-item:active {
  background: #f8f9ff;
}

.outline-item-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: block;
}

/* 不同级别标题的缩进 */
.outline-item.level-1 {
  padding-left: 0;
  font-weight: 600;
}

.outline-item.level-2 {
  padding-left: 20rpx;
  font-weight: 500;
}

.outline-item.level-3 {
  padding-left: 40rpx;
}

.outline-item.level-4 {
  padding-left: 60rpx;
}

.outline-item.level-5 {
  padding-left: 80rpx;
}

.outline-item.level-6 {
  padding-left: 100rpx;
}

/* 当前阅读位置高亮 */
.outline-item.active {
  background: #f0f7ff;
  border-left: 6rpx solid #3f72af;
  padding-left: 14rpx;
}

.outline-item.active .outline-item-text {
  color: #3f72af;
  font-weight: 600;
}