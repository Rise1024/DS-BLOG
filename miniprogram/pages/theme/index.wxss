.container {
  padding: 32rpx;
  min-height: 100vh;
  transition: all 0.3s ease;
}

.container.light {
  background-color: #f8f9fa;
  color: #333;
}

.container.dark {
  background-color: #333;
  color: #fff;
}

.theme-card {
  background: var(--card-bg);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.light .theme-card {
  --card-bg: #fff;
}

.dark .theme-card {
  --card-bg: #444;
}

.theme-header {
  margin-bottom: 32rpx;
}

.theme-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.theme-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.dark .theme-desc {
  color: #999;
}

.theme-content {
  display: flex;
  gap: 24rpx;
}

.theme-preview {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.theme-preview.active {
  background: rgba(63, 114, 175, 0.1);
}

.preview-box {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
}

.dark .preview-box {
  border-color: #555;
}

.preview-box.light {
  background: #fff;
}

.preview-box.dark {
  background: #333;
}

.preview-header {
  height: 40rpx;
  background: #f8f9fa;
}

.preview-box.dark .preview-header {
  background: #444;
}

.preview-body {
  padding: 16rpx;
}

.preview-line {
  height: 16rpx;
  background: #eee;
  margin-bottom: 8rpx;
  border-radius: 4rpx;
}

.preview-box.dark .preview-line {
  background: #555;
}

.preview-text {
  font-size: 28rpx;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dark .loading-mask {
  background: rgba(0, 0, 0, 0.8);
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #3f72af;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.dark .loading-spinner {
  border-color: #444;
  border-top-color: #3f72af;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}