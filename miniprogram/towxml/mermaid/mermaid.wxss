.h2w__mermaidBox {
  width: 100%;
  margin: 20rpx 0;
  padding: 20rpx;
  box-sizing: border-box;
}

.h2w__mermaidView {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.h2w__mermaidImage {
  width: 100%;
  max-width: 100%;
  border-radius: 8rpx;
}

.mermaid-loading,
.mermaid-error {
  padding: 40rpx 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.mermaid-error {
  color: #f56c6c;
}

.mermaid-code {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.mermaid-code-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.mermaid-code-content {
  display: block;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: 'Courier New', monospace;
  line-height: 1.6;
}

